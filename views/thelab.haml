!!!
%html(lang="en")
  %head
    %meta(charset="utf-8")
    - if @description
      %meta(name="description" content=@description)
    - if @keywords
      %meta(name="keywords" content=@keywords)
    %meta(name="viewport" content="width=device-width")
    %title= Sanitize.clean(@title)
    %link(href="/images/favicon.ico" rel="shortcut icon" type="image/vnd.microsoft.icon")
    %link(href="/images/favicon.png" rel="icon" type="image/png")
    %script(type="text/javascript" src="http://use.typekit.com/mrx0ypt.js")
    <script type="text/javascript">try{Typekit.load();}catch(e){}</script>
    %link(href="/css/master.css" media="screen" rel="stylesheet")
    %link(href="/articles.xml" rel="alternate" type="application/atom+xml")
    <!--[if lt IE 9]>
    <script src="//html5shiv.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
    %script(src="/javascripts/jquery.js")
    - if (@page && @page.metadata('support') === 'svg')
      %script(src="/javascripts/jquery.svg.pack.js")
      %script(src="/javascripts/jquery.svganim.pack.js")
      %script(src="/javascripts/jquery.svgdom.pack.js")
    - if (@page && @page.metadata('labjs'))
      %script{:src => @page.metadata('labjs')}
    = haml :analytics, :layout => false
  %body.thelab
    = haml :header, :layout => false
    %nav.breadcrumb
      - display_breadcrumbs
    %section#main
      .inner  
        = yield
    = haml :footer, :layout => false
